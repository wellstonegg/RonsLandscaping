<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Required Meta Tags Always Come First -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <main>
    <%= render 'layouts/header' %>

    <%= yield %>

    <!-- render 'layouts/footer' %>-->

    <%= link_to '#!', data: {type: 'fixed', position: '{bottom: 15, right: 15}', 'offset-top': '400',
                             compensation: '#js-header', 'show-effect': 'zoomIn'} do %>
        <i class="hs-icon hs-icon-arrow-top"></i>
    <% end %>

  </main>

    <!--<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAtt1z99GtrHZt_IcnK-wryNsQ30A112J0&callback=initMap" async></script>-->
  </body>
</html>
